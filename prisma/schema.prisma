generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
  // url      = env("DATABASE_URL")
}
// prisma/schema.prisma

model Project {
  id        String     @id @default(cuid()) @map("_id")
  userId    String
  name      String
  secretkey String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  emailLogs EmailLog[]

  @@index([userId])
}

model EmailLog {
  id           String   @id @default(cuid()) @map("_id")
  to           String
  subject      String
  messageId    String?
  body         String
  status       EmailStatus @default(PENDING)
  payload      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  project      Project  @relation(fields: [userSecretId], references: [id], onDelete: Cascade)
  userSecretId String

  @@index([userSecretId])
} 
model ContactMessage {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  email     String
  message   String   
  isRead    Boolean  @default(false) // Useful for a future admin panel
  createdAt DateTime @default(now())
}

// Define EmailStatus enum
enum EmailStatus {
  SENT
  FAILED
  PENDING
}